<% layout("boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form method="post" action="/listings" class="container mt-4 needs-validation" novalidate enctype="multipart/form-data">
                <h3>Add Something New In The List</h3>

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter title" required>
                    <div class="valid-feedback"> good!</div>
                    <div class="invalid-feedback"> pleas enter title</div>
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
                    <div class="valid-feedback"> good!</div>
                    <div class="invalid-feedback"> pleas enter description</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price (â‚¹)</label>
                    <input type="number" name="listing[price]" class="form-control" min="0" placeholder="Enter price" required>
                    <div class="invalid-feedback">Please enter price</div>
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label">upload Image</label>
                    <input type="file" name="image" class="form-control">


                </div>






                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" id="country" name="listing[country]" class="form-control" placeholder="Enter country" required>

                    <div class="invalid-feedback"> pleas enter country</div>
                </div>
        </div>



        <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
    </div>