<% layout("boilerplate") %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <h3 class="mb-4">
                    <%= listing.title %>
                </h3>

                <div class="card shadow rounded-3 listing-card">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" class="card-img-top show-img rounded-top" alt="listing_image">

                    <div class="card-body">
                        <p>
                            Owned by
                            <i>
                                <%= listing.owner ? listing.owner.username : "Unknown" %>
                            </i>
                        </p>

                        <p class="card-text">
                            <%= listing.description %>
                        </p>

                        <p class="card-text">Country:
                            <%= listing.country %>
                        </p>
                        <h5 class="text-success fw-bold">
                            Price: â‚¹
                            <%= listing.price %>
                        </h5>

                    </div>

                    <% if (currentUser && listing.owner && currentUser._id.toString() === listing.owner._id.toString()) { %>

                        <div class="card-footer d-flex justify-content-between">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-dark ">Delete</button>
                            </form>
                        </div>
                        <% } %>
                            <%if (currentUser){%>
                                <div class="col-8 offset-3">
                                    <h4>Leave a review</h4>
                                    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                                        <div class="mb-3">
                                            <label for="rating" class="form-label">Rating</label>
                                            <select class="form-select" id="rating" name="review[rating]" required>
                                    <option value="" disabled selected>Select rating</option>
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="comment" class="form-label">Comment</label>
                                            <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit Review</button>
                                    </form>
                                </div>
                                <% } %>

                </div>
                <hr>
                <h4>All Reviews</h4>
                <div class="row">
                    <% for(review of listing.reviews) { %>
                        <div class="card col-6 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @
                                    <%= review.author.username %>
                                </h5>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="card-text">
                                    <%= review.rating %>
                                </p>
                            </div>
                            <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

    </div>